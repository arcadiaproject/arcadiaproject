---
layout: html5
---

#left-column
	= link_to '/',:ref=> 'home', :class => "no style" do
		#logo
#right-column
	.container-intestazione
		%h1.title 
			#{track.title}
		%p.subtitle 
			#{track.subtitle}
	%p.excerpt 
		#{track.excerpt}
	.clear
	.track
		.bottone-generico
			.container
				.corner-left
				.corner-right
				%h3 »»» Next
			.left_hover
			.center_hover
			.right_hover
			
		- data.events.group_by {|a| a.url }.each do |url, events|
			- if url == track.url	
				-  events.each do |e|
					.content-calendar
						.white-box
							.container-info
								%a
									#{e.title}
								%p.data-calendar
									#{e.date}
								%p.data-calendar
									at
									%span.where 
										#{e.where}
							.container-descrizione
								%p.intro-calendar
									#{e.intro1}
								%p.intro-calendar
									#{e.intro2}
							