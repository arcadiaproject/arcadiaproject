---
layout: html5
---

#left-column
	= link_to '/',:ref=> 'home', :class => "no style" do
		#logo
	%nav{:role => "navigation_menu"}
		%ul
			%li
				%a{:href => "../events.html"} All
			- data.tracks.each do |t|
				- if t.url != track.url	
					%li
						%a{:href => "/tracks/#{t.url}.html"} #{t.title}
	
#right-column
	- data.events.group_by {|a| a.track }.each do |t, events|
		- if t == track.url
			.container-intestazione
				%h1.title
					#{track.title}
				%p.subtitle 
					#{track.subtitle}
			%p.excerpt 
				#{track.excerpt}
			.clear
			.track
				.bottone-generico
					.container
						.corner-left
						.corner-right
						%h3 »»» Next
					.left_hover
					.center_hover
					.right_hover
			
		
				-  events.each do |e|
					- if DateTime.now < DateTime.parse("#{e.month}") 
						.content-calendar
							.white-box
								.container-info
									%a.logo{:href => "/tracks/events/#{e.urlevent}.html"} 
										#{e.title}
									%p.data-calendar	
										#{e.date}
									%p.data-calendar
										at
										%span.where 
											#{e.where}
								.container-descrizione
									%p.intro-calendar
										#{e.intro1}
									%p.intro-calendar
										#{e.intro2}
									

			.post
				-  events.each do |e|
					- if DateTime.now > DateTime.parse("#{e.month}")
						%img.post{:src => "../images/#{e.urlevent}_post.png"}/
						.content-data.white-box
							%h1 #{e.date}
						.content-news.white-box
							%h1 #{e.title}
							%p.autore #{e.intro2}
							%p.data #{e.date}
							%p.dove 
								#{e.where}
								%span.indirizzo 
						.clear
							%a.bottone-generico{:href => "events/#{e.urlevent}.html"}
								.container
									.corner-left
									.corner-right
									%h3 read more
								.left_hover
								.center_hover
								.right_hover						