---
layout: html5
---

#left-column
	= link_to '/',:ref=> 'home', :class => "no style" do
		#logo
	%nav{:role => "navigation_menu"}
		%ul
			%li
				%a{:href => "../../events.html"} All
			- data.tracks.each do |t|
				%li
					%a{:href => "/tracks/#{t.url}.html"} #{t.title}

#right-column
	.evento
		.title
			%h1
				#{event.title}
			%p.date 
				#{event.date}
		.box
			.white-box
				%p.quote 
					#{event.intro1}
			.white-box
				%p.quote 
					#{event.intro2}
		.content= partial "#{event.urlevent}" 
		